# cornell demo 

camera:
  position: [0.0, 0.0, 0.0]
  fov: 40.0

materials:
  - name: "mat1"
    color: [255,0,0]
    bump: "textures/concrete_bump.png"
    diffuse: 2.0
    specular: 32.0
  - name: "mat2"
    color: [0,255,0]
    bump: "textures/concrete_bump.png"
    diffuse: 2.0
    specular: 32.0
  - name: "mat3"
    color: [200,200,200]
    bump: "textures/concrete_bump.png"
    diffuse: 2.0
    specular: 32.0
  - name: "mat4"
    color: [0,0,255]
    bump: "textures/bump.png"
    diffuse: 2.0
    specular: 16.0
    refractive: 1.333
  - name: "mirror1"
    color: [255,255,255]
    diffuse: 2.0
    specular: 32.0
    reflective: 1.0
    refractive: 1.333

  - name: "mirror2"
    color: [255,255,255]
    diffuse: 2.0
    specular: 32.0
    reflective: 0.9

  - name: "duckmat"
    texture: "textures/duck.png"
    bump: "textures/duck_bump.png"
    diffuse: 2.0
    specular: 32.0

objects:
  - name: "leftwall"
    file: "models/quad2.ply"
    material: "mat1"
    transforms:
      scale: [1.8, 1.5, 1.5]
      rotate: [0.0, -90.0, 0.0]
      move: [-0.65, 0.15, 1.7]
  
  - name: "rightwall"
    file: "models/quad2.ply"
    material: "mat2"
    transforms:
      scale: [1.8, 1.5, 1.5]
      rotate: [0.0, 90.0, 0.0]
      move: [0.65, 0.15, 1.7]

  - name: "frontwall"
    file: "models/quad2.ply"
    material: "mat3"
    transforms:
      scale: 1.5
      move: [0.0, 0.15, 2.5]

  - name: "backwall"
    file: "models/quad2.ply"
    material: "mat3"
    flags:
    transforms:
      scale: 1.5
      rotate: [0.0, -180.0, 0.0]
      move: [0.0, 0.15, 1.2]
  
  - name: "floor"
    file: "models/quad2.ply"
    material: "mat3"
    transforms:
      scale: [1.5, 1.8, 1.5]
      rotate: [90.0, 0.0, 0.0]
      move: [0.0, -0.6, 1.7]

  - name: "roof"
    file: "models/quad2.ply"
    material: "mat3"
    transforms:
      scale: [1.5, 1.8, 1.5]
      rotate: [-90.0, 0.0, 0.0]
      move: [0.0, 0.7, 1.7]

  - name: "light1"
    file: "models/quad2.ply"
    material: "mat3"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 0.2
      rotate: [-90.0, 0.0, 0.0]
      move: [0.0, 0.69, 2.0]

  - name: "light2"
    file: "models/quad2.ply"
    material: "mat3"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 0.2
      rotate: [0, -180.0, 0.0]
      move: [-0.5, -0.45, 1.21]

  - name: "block1"
    file: "models/cube.ply"
    material: "mirror1"
    transforms:
      scale: [0.2, 0.4, 0.2]
      rotate: [0.0, -20.0, 0.0]
      move: [-0.25, -0.6, 2.2]

  - name: "block2"
    file: "models/cube.ply"
    material: "mat4"
    transforms:
      scale: 0.2
      rotate: [0.0, 25.0, 0.0]
      move: [0.3, -0.6, 2.1]

  - name: "duck"
    file: "models/duck2.ply"
    material: "duckmat"
    transforms:
      scale: 0.5
      rotate: [0.0, -30.0, 0.0]
      move: [-0.1, -0.59, 1.8]

  - name: "ball"
    file: "models/sphere.ply"
    material: "mirror2"
    transforms:
      scale: 0.2
      move: [0.3, 0.3, 2.0]


lights:
  - type: ambient
    color: [255,255,255]
    intensity: 0.1
  - type: point
    color: [255,255,255]
    intensity: 0.5
    position: [0.0, 0.68, 2.0]
  - type: point
    color: [255,255,255]
    intensity: 0.2
    position: [-0.5, -0.45, 1.25]