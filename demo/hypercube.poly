# hypercube.poly

camera:
  position: [0.0,0.0,0.0]
  fov: 60.0

materials:
  - name: "skymat"
    texture: "textures/sky3.png"
    diffuse: 0.0
    specular: 0.0
  - name: "mat1"
    texture: "textures/demo_texture.png"
    diffuse: 2.0
    specular: 32.0
  - name: "mat2"
    color: [255,255,255]
    diffuse: 0.0
    specular: 0.0
    refractive: 1.333

objects:
  - name: "sky"
    file: "models/sky.ply"
    material: "skymat"
    flags:
      - DISABLE_SHADING
    transforms:
      scale: 3.0
      move: [0.0, -0.5, 2.0]
  
  - name: "cube1"
    file: "models/quad2.ply"
    material: mat1
    transforms:
      
      move: [0.0, -0.5, 2.0]

  - name: "cube2"
    file: "models/cube.ply"
    material: mat2
    flags:
      - DISABLE_RENDERING
    transforms:
      scale: 0.65
      move: [0.0, 0.0, 2.0]

lights:
  - type: directional
    direction: [0.5, 0.5, -1.0]
    color: [255,255,255]
    intensity: 0.7